<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:context="com.example.kuching_park_hotel.Account_Creation_Activity">

        <TextView
            android:id="@+id/textView_personal_Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account here"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans_semibold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView_Guest_name"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Name:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_personal_Information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/editText_Guest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded"
            android:padding="8dp"
            android:fontFamily="@font/open_sans_light_italic"
            android:textStyle="bold"
            android:hint="Guest Name"
            app:layout_constraintLeft_toLeftOf="@id/textView_Guest_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Guest_name"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView_Guest_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Email:"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:padding="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Guest_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/editText_Guest_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/open_sans_light_italic"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:hint="Email"
            android:padding="8dp"
            app:layout_constraintLeft_toLeftOf="@id/textView_Guest_email"
            app:layout_constraintTop_toBottomOf="@id/textView_Guest_email"
            android:background="@drawable/rounded"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView_Guest_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:padding="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Guest_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/editText_Guest_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:fontFamily="@font/open_sans_light_italic"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/textView_Guest_password"
            android:background="@drawable/rounded"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_Guest_password"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView_Guest_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:fontFamily="@font/open_sans_semibold"
            android:textAlignment="center"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:padding="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Guest_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/editText_Guest_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:fontFamily="@font/open_sans_light_italic"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@drawable/rounded"
            app:layout_constraintLeft_toLeftOf="@id/textView_Guest_confirm_password"
            app:layout_constraintTop_toBottomOf="@id/textView_Guest_confirm_password"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView_Guest_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile:"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/textcolor"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Guest_confirm_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/editText_Guest_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:fontFamily="@font/open_sans_light_italic"
            android:textStyle="bold"
            android:hint="Mobile Number"
            android:padding="8dp"
            android:background="@drawable/rounded"
            app:layout_constraintLeft_toLeftOf="@id/textView_Guest_mobile"
            app:layout_constraintTop_toBottomOf="@id/textView_Guest_mobile"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView_Guest_postCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Code:"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/textcolor"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Guest_mobile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/editText_Guest_postCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:fontFamily="@font/open_sans_light_italic"
            android:textStyle="bold"
            android:hint="Post Code"
            android:padding="8dp"
            android:background="@drawable/rounded"
            app:layout_constraintLeft_toLeftOf="@id/textView_Guest_postCode"
            app:layout_constraintTop_toBottomOf="@id/textView_Guest_postCode"/>

        <Button
            android:id="@+id/button_account_creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"

            android:background="@drawable/rounded_button"
            android:fontFamily="@font/open_sans_semibold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_Guest_postCode"
            android:layout_marginTop="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>