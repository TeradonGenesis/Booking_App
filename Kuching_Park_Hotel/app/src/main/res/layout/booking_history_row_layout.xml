<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:background="@drawable/border_bottom">

            <TextView
                android:id="@+id/textView_booking_roomName"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Standard Twin Sharing Room"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView_booking_roomPrice"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="RM200.00"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/textView_booking_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/3/2014 - 12/3/2014"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/textView_booking_roomName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/textView_booking_nights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 nights"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/textView_booking_duration"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>