<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context="com.example.kuching_park_hotel.Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/placeholder"
        app:layout_constraintBottom_toTopOf="@id/textView_login_email"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:layout_marginTop="400dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_main"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Login"
        android:fontFamily="@font/open_sans_semibold"
         />

    <Button
        android:id="@+id/button_create_account"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Create Account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_main" />

    <TextView
        android:id="@+id/textView_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="6dp"
        android:text="Email"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/editText_login_email"
        app:layout_constraintLeft_toLeftOf="@id/button_main" />

    <EditText
        android:background="@drawable/rounded"
        android:id="@+id/editText_login_email"
        app:layout_constraintLeft_toLeftOf="@id/button_main"
        app:layout_constraintBottom_toBottomOf="@id/textView_login_email"
        app:layout_constraintBottom_toTopOf="@id/textView_password_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:inputType="textPersonName"
        android:hint="Enter your email here"
        android:padding="10dp"
        android:fontFamily="@font/open_sans_light_italic"
        android:layout_marginBottom="20dp"
        />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/button_main"
        app:layout_constraintBottom_toTopOf="@id/editText_password_email"
        android:id="@+id/textView_password_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:text="Password"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="6dp"
        android:textStyle="bold"/>

    <EditText
        android:background="@drawable/rounded"
        android:id="@+id/editText_password_email"
        app:layout_constraintLeft_toLeftOf="@id/button_main"
        app:layout_constraintBottom_toBottomOf="@id/textView_password_email"
        app:layout_constraintBottom_toTopOf="@id/button_main"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="20"
        android:padding="10dp"
        android:inputType="textPassword"
        android:hint="Enter your password here"
        android:fontFamily="@font/open_sans_light_italic"
        android:layout_marginBottom="60dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
